        function click_add_tag() {
            const name_tag = $("#tag-name").val();
            if (name_tag.length < 2) {
                alert("Vui lòng nhập đủ độ dài của tags")
            }
            else {
                console.log(name_tag);
                $.ajax("/api/admins/createTag", {
                    type: 'post',
                    dataType: 'json',
                    data: {
                        name: name_tag
                    }
                }).done(data => {
                    console.log(data);
                    $("#modal-add-tag").modal('hide');
                    $("#table-sub-category").prepend(`<tr id='tag${data.data.id}'>
                    <td class='td-name'><label>${data.data.name}</label></td>
                    <td class='td-btn'>
                        <button idtags=${data.data.id} type='button' class='btn-del' data-toggle='modal' data-target='#modal-delete-tag'
                            onclick="click_delete_tag(this.id)"><i class='fa fa-trash'></i></button>
                        <button idtags=${data.data.id} type='button' class='btn-edit' data-toggle='modal' data-target='#modal-edit-tag'
                            onclick="click_edit_tag_btn(this)"><i class='fa fa-pencil-square-o'></i></button>
                    </td>
                </tr>`)
                }).fail(function (xhr, textStatus, errorThrown) {
                    var err = JSON.parse(xhr.responseText);
                    alert(err.msg);
                });
            }
        }


    </script>

