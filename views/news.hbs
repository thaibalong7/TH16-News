                                    <textarea class="input" name="message" placeholder="Nội dung bình luận"></textarea>
                                </div>
                                 <input type="submit" class="primary-button" value="Gởi bình luận"></input>
                            </div>
                        </div>
                    </form> --}}
                </div>
                <!-- /reply -->
            </div>

            <!-- /Post content -->
            <!-- aside -->
            <div class="col-md-3">
                <!-- ad -->
                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="/img/ad-1.jpg" alt="">
                    </a>
                </div>
                <!-- /ad -->

                <!-- post widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Xem Thêm</h2>
                    </div>

                    <div id="post-widget-same-category" idNews={{idNews}}>
                    </div>
                </div>
                <!-- /post widget -->

                <!-- catagories -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Chuyên Mục</h2>
                    </div>
                    <div class="category-widget">
                        <ul id="ul-category-widget">

                        </ul>
                    </div>
                </div>
                <!-- /catagories -->

                <!-- tags -->
                <div class="aside-widget">
                    <div class="tags-widget">
                        <ul id="ul-tags-news">
                        </ul>
                    </div>
                </div>
                <!-- /tags -->
            </div>
            <!-- /aside -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
