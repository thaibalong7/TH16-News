<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <h2>{{tag.name}}</h2>
                    </br>
                    <div class="clearfix visible-md visible-lg"></div>

                    <!-- ad -->
                    <div class="col-md-12">
                        <div class="section-row">
                            <a href="#">
                                <img class="img-responsive center-block" src="/img/ad-2.jpg" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- ad -->

                    <!-- post -->
                    <div id="post-list-tag">
                        {{#each news}}
                        <div class="col-md-12">
                            <div class="post post-row">
                                <a class="post-img" href={{this.link}}><img src={{this.avatar}} alt=""></a>
                                <div class="post-body">
                                    <div class="post-meta">
                                        <a class="post-category cat-4" href={{this.sub_category.link}}>{{this.sub_category.name}}</a>
                                        <span class="post-date">{{this.publicAt}}</span>
                                    </div>
                                    <h3 class="post-title"><a href={{this.link}}>{{this.title}}</a></h3>
                                    <p class="post-abstract">{{this.abstract}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <!-- /post -->

                    {{#if isNextPage}}
                    <div id="load-more-tag-container" class="col-md-12">
                        <div class="section-row">
                            <button class="primary-button center-block" id="load-more-tag" next_page={{next_page}}
                                per_page={{per_page}} idTag={{tag.id}}>Xem Thêm</button>
                        </div>
                    </div>
                    {{/if}}

                    {{!-- loading --}}
                    <div id="loading-container" class="col-md-12 loading" hidden>
                        <img class="center-block" src="/img/loading.gif" alt=""></img>
                    </div>
                    {{!-- /loading --}}
                </div>
            </div>

            <div class="col-md-3">
                <!-- ad -->
                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="/img/ad-1.jpg" alt="">
                    </a>
                </div>
                <!-- /ad -->

                <!-- post widget -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Mới nhất</h2>
                    </div>

                    <div id="post-widget">

                    </div>
                </div>
                <!-- /post widget -->

                <!-- catagories -->
                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Chuyên Mục</h2>
                    </div>
                    <div class="category-widget">
                        <ul id="ul-category-widget">

                        </ul>
                    </div>
                </div>
                <!-- /catagories -->


                {{!--
                <!-- archive -->
                <div class="aside-widget">
